# Editor config: bigc2elastic

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Set default charset
[*.{js,json,md}]
charset = utf-8

# 2 space indentation
[*.{js,json,md}]
indent_style = space
indent_size = 2
